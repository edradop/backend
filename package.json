  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:all": "concurrently -c \"black.bold,red.bold,green.bold,yellow.bold,blue.bold,magenta.bold,cyan.bold,white.bold,gray.bold\" \"pnpm:sw:*\"",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start-prod": "node dist/apps/edradop/main",
    "sw:analytic": "nest start analytic --watch",
    "sw:authentication": "nest start authentication --watch",
    "sw:communication": "nest start communication --watch",
    "sw:edradop": "nest start edradop --watch",
    "sw:payment": "nest start payment --watch",
    "sw:storage": "nest start storage --watch",
    "sw:user": "nest start user --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/edradop/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.1",
    "@nestjs/bull": "^10.0.1",
